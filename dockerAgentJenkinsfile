pipeline
{
    agent 
    { 
        docker
        {
             image "maven:3.6.0-jdk-13"
            // label "docker"
            // args '-v /root/.m2:/root/.m2' 

        }
    }
    stages
    {  
        stage("Build BE")
        {
            steps
            {              
                sh "mvn -v"
                sh 'sudo mvn -B -e -X' 
               //sh 'mvn clean install'
            }
        }
    


    }
        
        post
        {
            always
            {
                cleanWs()                
            }
        }


}
